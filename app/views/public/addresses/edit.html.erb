<h2>配送先編集</h2>

<%= form_with url: addresses_path(@address.id),method: :patch do |f| %>
  <div>
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: @address.postal_code %>
  </div>
  <div>
    <%= f.label :"住所" %>
    <%= f.text_field :address, placeholder: @address.address %>
  </div>
  <div>
    <%= f.label :"宛名" %>
    <%= f.text_field :name, placeholder: @address.name %>
  </div>
  <div>
    <%= f.submit "変更内容を保存" %>
  </div>
<% end %>