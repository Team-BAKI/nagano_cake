<h2>配送先登録/一覧</h2>


<%= form_with url: addresses_path do |f| %>
  <div>
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, placeholder: @customer.postal_code %>
  </div>
  <div>
    <%= f.label :"住所" %>
    <%= f.text_field :address, placeholder: @customer.address %>
  </div>
  <div>
    <%= f.label :"宛名" %>
    <%= f.text_field :name, placeholder: @customer.last_name + @customer.first_name %>
  </div>
  <div>
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛先</th>
    <th></th>
    <th></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td><%= button_to "削除する", address_path(address.id), method: :delete %></td>
  </tr>
  <% end %>
</table>