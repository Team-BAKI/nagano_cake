<div class = "container">
  <div class = "col-12 col-md-8" >
    <h3>配送先登録/一覧</h3>
    <%= form_with model: @address, local: true, method: :post do |f| %>
      <table class = "table table-borderless" >
        <thead>
          <div class = "form-group row font-weight-bold" >
            <%= f.label "郵便番号(ハイフンなし)", class:"mr-0 col-sm-4 col-form-label" %>
            <div class = "col-sm-4" >
              <%= f.text_field :postal_code, class:"form-control" %>
            </div>
          </div>
          <div class= "form-group row font-weight-bold" >
            <%= f.label "住所", class:"mr-0 col-sm-4 col-form-label" %>
            <div class = "col-md-8" >
              <%= f.text_field :address, class:"form-control" %>
            </div>
          </div>
          <div class = "form-group row font-weight-bold" >
            <%= f.label "宛名", class:"mr-0 col-sm-4 col-form-label" %>
            <div class = "col-md-4" >
              <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>
          <div class = "form-group row justify-content-end">
            <%= f.submit "新規登録",  class: 'btn btn-success' %>
          </div>
        </thead>
      </table>
    <% end %>
  </div>
</div>





<table class="table">
  <thead class="thead-light">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛先</th>
      <th></th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %></td>
        <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </thead>
  
</table>