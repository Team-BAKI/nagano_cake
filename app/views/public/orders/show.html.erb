<h2>注文履歴詳細</h2>

<div>
  注文情報
　<table class="table">
    <tr><th>注文日</th></tr>
    <tr><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
    
    <tr><th>配送先</th></tr>
    <tr><td>
      〒<%= @order.postal_code %></br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td></tr>
    
    <tr><th>支払方法</th></tr>
    <tr><td><%= @order.total_payment %></td></tr>
    
    <tr><th>ステータス</th></tr>
    <tr><td><%= @order.status_i18n %></td></tr>
  </table>
</div>

<div>
請求情報
  <table class="table">
    <tr><th>商品合計</th></tr>
    <tr><td><%= @order.total_product_price %></td></tr>
    
    <tr><th>配送料</th></tr>
    <tr><td><%= @order.shipping_cost %></td></tr>
    
    <tr><th>御請求額</th></tr>
    <tr><td><%= @order.total_payment %></td></tr>
  </table>
</div>

<div>
注文内容
　<table class="table">
　  <thead>
　    <tr>
　      <th>商品</th>
　      <th>単価(税込)</th>
　      <th>個数</th>
　      <th>小計</th>
　    </tr>
　  </thead>
　  <tbody>
　    <% @order.order_details.each do |order_detail| %>
　    <tr>
　      <td><%= order_detail.item.name %></td>
　      <td><%= order_detail.price %></td>
　      <td><%= order_detail.amount %></td>
　      <td><%= order_detail.total_item_price %></td>
　    </tr>
　    <% end %>
　  </tbody>
　</table>
</div>