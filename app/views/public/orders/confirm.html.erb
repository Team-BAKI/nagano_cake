<div class="container">
  <div class="row">
    <div class="col-3">
      <h3 class="ml-5"><mark class="bg-light">注文情報確認</mark></h3>
    </div>
  </div>

　<div class="row">
　  <div class="col-7">
       <table class="table table-bordered">
         <thead class="thead-light">
           <tr>
             <th>商品名</th>
             <th>単価(税込)</th>
             <th>数量</th>
             <th>小計</th>
             </tr>
          </thead>
          <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image_id, size:"50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= (cart_item.item.with_tax_price*cart_item.amount).to_s(:delimited) %></td>
             </tr>
          <% end %>
          </tbody>
        </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered">
        <tr>
          <th bgcolor="">送料</th>
          <td>800</td>
        </tr>
        <tr>
          <th bgcolor="">商品合計</th>
          <td>
            <% @sum = 0 %>
            <% @cart_items.each do |cart_item| %>
            <% @sum +=  cart_item.subtotal %>
            <% end %>
            <%= @sum.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th bgcolor="">請求合計</th>
　　　    <td><%= (@sum + 800).to_s(:delimited) %></td>
　　　  </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <h5><strong>支払方法</strong></h5>
        <span><%= @order.payment_method_i18n %></span>
      </div>

      <div>
        <h5><strong>お届け先</strong></h5>
        <p>
          〒<%= @order.postal_code + " " + @order.address %><br>
          <%= @order.name %>
        </p>
      </div>
    </div>
  </div>


　<div class="mx-auto" style="width: 200px;">
    <%= form_with model:@order, url:orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>

      <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
  </div>
  
</div>