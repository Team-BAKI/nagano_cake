<div class="container">
  <div class="row">
    <div class="col-3 mb-3">
      <h3 class="ml-5"><mark class="bg-light">注文情報入力</mark></h3>
    </div>
  </div>


  <div class="row">
    <div class="col-12">
      <%= form_with model:@order, url: "/orders/:order_id/confirm", method: :post, local: true do |f| %>
        <div>
          <h4><strong>支払方法</strong></h4>
          <div class="ml-5">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          </div>
        </div>

        <div>
          <h4><strong>お届け先</strong></h4>
          <div class="ml-5">
            <!--mb-5が効かない-->
            <div class="mb-5">
              <%= f.radio_button :select_address, 0 %>
              <%= f.label :address_id, "ご自身の住所" %>
              <!--divでしかずらす方法ない？-->
              <div class="ml-5">
                <%= '〒' + current_customer.postal_code + ' ' + current_customer.address %></br>
                <%= current_customer.last_name + ' ' + current_customer.first_name %>
              </div>
            </div>

            <%= f.radio_button :select_address, 1 %>
            <%= f.label :address_id, "登録住所からの選択" %>
            <!--上記と揃わない、幅伸ばしたい-->
            <div class="ml-5">
　　          <%= f.collection_select :registered_address, Address.where(customer_id: current_customer.id), :id, :address_display %>
            </div>


            <%= f.radio_button :select_address, 2 %>
            <%= f.label :address_id, "新しいお届け先" %>
            <div class="ml-5">
              <div class="form-group row">
                <%= f.label :郵便番号（ハイフンなし）, class:"col-3 col-form-label" %>
                <div class="col-4">
                  <%= f.text_field :postal_code, class: 'form-control', :placeholder => "0000000" %>
                </div>
              </div>
              <div class="form-group row">
                <%= f.label :住所, class:"col-3 col-form-label" %>
                <div class="col-8">
                  <%= f.text_field :address, class: 'form-control', :placeholder => "東京都渋谷区代々木神園町0−0" %>
                </div>
              </div>
              <div class="form-group row">
                <%= f.label :宛名, class:"col-3 col-form-label" %>
                  <div class="col-4">
                    <%= f.text_field :name, class: 'form-control', :placeholder => "令和道子" %>
                  </div>
              </div>
            </div>
          </div>
        </div>

　　　　<div class="mx-auto" style="width: 200px;">
          <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
        </div>

      <% end %>
    <div>
  </div>
</div>