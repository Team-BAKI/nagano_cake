<h1>注文情報入力</h1>

<%= form_with model:@order, url: "/orders/:order_id/confirm", method: :post, local: true do |f| %>
  <div>
    支払方法</br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>

  <div>
    お届け先</br>
    <%= f.radio_button :select_address, 0 %>
    <%= f.label :address_id, "ご自身の住所" %></br>
    <%= '〒' + current_customer.postal_code + ' ' + current_customer.address %></br>
    <%= current_customer.last_name + ' ' + current_customer.first_name %></br>


    <%= f.radio_button :select_address, 1 %>
    <%= f.label :address_id, "登録住所からの選択" %>
    <%= f.collection_select :registered_address, Address.where(customer_id: current_customer.id), :id, :address_display %></br>

    <%= f.radio_button :select_address, 2 %>
    <%= f.label :address_id, "新しいお届け先" %></br>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, class: 'form-control' %>
    <%= f.label :住所 %>
    <%= f.text_field :address, class: 'form-control' %>
    <%= f.label :宛名 %>
    <%= f.text_field :name, class: 'form-control' %>

  </div>

  <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>

  <% end %>
</div>