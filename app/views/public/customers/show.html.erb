<h2>マイページ</h2>

<h4>登録情報</h4>  <%= link_to "編集する", edit_customers_path %>

<table>
  <tr>
    <th>氏名</th><th><%= @customers.full_name %></th>
  </tr>
  <tr>
    <th>カナ</th><th><%= @customers.last_name_kana + @customers.first_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th><th><%= @customers.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th><th><%= @customers.address %></th>
  </tr>
  <tr>
    <th>電話番号</th><th><%= @customers.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th><th><%= @customers.email %></th>
  </tr>
</table>

<h4>配送先</h4> <%= link_to "一覧を見る", addresses_path %>

