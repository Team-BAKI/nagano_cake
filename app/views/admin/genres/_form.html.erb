<% if genre.name == nil %>
  <%= form_with model: genre, url: '/admin/genres', method: :post, local: true do |f|  %>
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>
<% else %>
  <%= form_with model: genre, url: admin_genre_path(genre), method: :patch, local: true do |f|  %>
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>
<% end %>