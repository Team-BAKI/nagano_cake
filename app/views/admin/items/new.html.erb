<h3>商品新規登録</h3>
<%= form_with(model: [ :admin, @item ]) do |f| %>

　<div class="form-group">
　  <%= f.label :商品画像 %>
　  <%= f.file_field :image, accept: "image/*" %>
  </div>

　<div class="form-group">
　  <%= f.label :商品名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
　  <%= f.label :商品説明 %>
    <%= f.text_field :introduction, class: 'form-control' %>
  </div>
  <div class="form-group">
　  <%= f.label :ジャンル %>
    <%= f.select :genre_id, [1,2,3,4], {include_blank: '---'} %>
  </div>
  <div class="form-group">
　  <%= f.label :税抜価格 %>
    <%= f.text_field :price, class: 'form-control' %>円
  </div>
  <div class="form-group">
　  <%= f.label :販売ステータス %>
　  <%= f.radio_button :is_active, 'true' %>
　  <%= f.label :is_active, '販売中', value: true %>
　  <%= f.radio_button :is_active, 'false' %>
　  <%= f.label :is_active, '販売停止中', value: false %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
